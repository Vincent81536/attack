-- LocalScript inside StarterGui



-- Wait for player

local player = game.Players.LocalPlayer



-- Create ScreenGui

local screenGui = Instance.new("ScreenGui")

screenGui.Name = "AttackGui"

screenGui.ResetOnSpawn = true -- This ensures it resets on death

screenGui.Parent = player:WaitForChild("PlayerGui")



-- Create Attack Button

local attackButton = Instance.new("TextButton")

attackButton.Name = "AttackButton"

attackButton.Size = UDim2.new(0, 120, 0, 40)

attackButton.Position = UDim2.new(0.5, -60, 0.5, -20)

attackButton.BackgroundColor3 = Color3.new(0, 0, 0) -- Black background

attackButton.TextColor3 = Color3.new(1, 1, 1) -- White text

attackButton.Font = Enum.Font.GothamBold

attackButton.TextSize = 18

attackButton.Text = "Attack"

attackButton.Active = true

attackButton.Draggable = true

attackButton.Parent = screenGui



-- Animation setup

local animationId = "rbxassetid://71308482162106"

local hasPlayed = false



attackButton.MouseButton1Click:Connect(function()

if hasPlayed then return end

hasPlayed = true



local character = player.Character or player.CharacterAdded:Wait()

local humanoid = character:FindFirstChildOfClass("Humanoid")

if humanoid then

local animation = Instance.new("Animation")

animation.AnimationId = animationId

local track = humanoid:LoadAnimation(animation)

track:Play()

end

end)
